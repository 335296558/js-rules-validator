{
  "name": "js-n-validator",
  "description": "基于 async-validator 库 https://github.com/yiminghe/async-validator 封装的规则验证插件，支持浏览器与node",
  "version": "1.0.0",
  "private": true,
  "author": "凡尘 <335296558@qq.com>",
  "github": "https://github.com/335296558/js-n-validator",
  "bugs": "https://github.com/335296558/js-n-validator/issues",
  "repository": "git@github.com:335296558/js-n-validator.git",
  "keywords": [
    "validator",
    "verification",
    "verify",
    "validate",
    "egg",
    "node",
    "js-n-validator"
  ],
  "scripts": {
    "build": "rm -rf pkg && pika build --out=pkg/js-n-validator",
    "test": "jest --preset ts-jest"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@pika/types": "^0.9.2",
    "@types/jest": "^25.1.3",
    "jest": "^25.1.0",
    "shelljs": "^0.8.4",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
    ],
    "extends": [

    ]
  },
  "sideEffects": true,
  "files": [
    "js-n-validator/dis-*/"
  ],
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "tsconfig": "tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ],
      [
        "@pika/plugin-build-node",
        {
          "sourceMap": false
        }
      ]
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "dependencies": {
    "async-validator": "^3.5.2",
    "eslint": "^7.26.0"
  }
}
